            <Value>=Parameters!SchemaName.Value</Value>
          </QueryParameter>
          <QueryParameter Name="@TableName">
            <Value>=Parameters!TableName.Value</Value>
          </QueryParameter>
        </QueryParameters>
        <Timeout>60</Timeout>
        <rd:UseGenericDesigner>true</rd:UseGenericDesigner>
      </Query>
    </DataSet>
